<% provide(:title, 'All Users') %>
<h1>All Users</h1>
<table class='table table-hover'>
  <thead>
  <tr>
    <th>First Name</th>
    <th>Last Name</th>
    <th>Email</th>
    <td></td>
  </tr>
  </thead>
  <tbody>
  <% @users.each do |user| %>
      <tr>
       <td> <%= link_to user.name, user %></td>
       <td><%= user.lastname %></td>
       <td><%= user.email %></td>
       <% if current_user.admin? && !current_user?(user) %>
            <td><%= link_to "delete", user, method: :delete,
                          data: { confirm: "User will remove on our app. You sure?" } %></td>
        <% end %>
      </tr>
  <% end %>
  </tbody>
</table>




